{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["ESNext"],
    "module": "NodeNext",
    "moduleResolution": "node",
    "target": "es2022",
    "types": ["node", "vitest/globals"]
  }
}
